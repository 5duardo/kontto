{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    // Ensure TS understands and emits JSX for React/React Native
    "jsx": "react-jsx",
    // Allow default imports from CommonJS modules like 'react'
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Speed up type checking and avoid library noise
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components": [
        "src/components/index"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens": [
        "src/screens/index"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@navigation": [
        "src/navigation"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@store": [
        "src/store"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@theme": [
        "src/theme/index"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@services": [
        "src/services"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@hooks": [
        "src/hooks/index"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@types": [
        "src/types"
      ]
    }
  },
  // Explicitly include project files so the TS server picks up the correct settings
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ]
}