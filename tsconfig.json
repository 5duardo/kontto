{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components": [
        "src/components/index"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens": [
        "src/screens/index"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@navigation": [
        "src/navigation"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@store": [
        "src/store"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@theme": [
        "src/theme/index"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@services": [
        "src/services"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@hooks": [
        "src/hooks/index"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@types": [
        "src/types"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "extends": "expo/tsconfig.base"
}
